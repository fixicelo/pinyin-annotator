{
  "name": "pinyin-annotator",
  "displayName": "Pinyin Annotator",
  "version": "1.4.1",
  "description": "A browser extension overlays Hanyu Pinyin annotations over Chinese characters present in web pages and video closed captions.",
  "author": "fixicelo <fixicelo@gmail.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fixicelo/pinyin-annotator.git"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@pinyin-pro/data": "^1.2.0",
    "@plasmohq/messaging": "^0.7.2",
    "@plasmohq/storage": "^1.15.0",
    "antd": "^6.0.1",
    "cnchar": "^3.2.6",
    "cnchar-poly": "^3.2.6",
    "cnchar-trad": "^3.2.6",
    "html-react-parser": "^5.2.10",
    "lxgw-wenkai-webfont": "^1.7.0",
    "pinyin-pro": "^3.27.0",
    "plasmo": "^0.90.5",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/chrome": "^0.1.32",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "manifest": {
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "pinyin-annotator@fixicelo.ext"
      }
    },
    "commands": {
      "toggle-annotation": {
        "suggested_key": {
          "default": "Alt+Shift+P",
          "mac": "Alt+Shift+P"
        },
        "description": "Toggle Pinyin annotations"
      }
    }
  }
}
