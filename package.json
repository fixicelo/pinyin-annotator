{
  "name": "pinyin-annotator",
  "displayName": "Pinyin Annotator",
  "version": "1.0.0",
  "description": "A browser extension that annotates Chinese characters with Hanyu Pinyin.",
  "author": "fixicelo <fixicelo@gmail.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/material": "^5.15.14",
    "@plasmohq/storage": "^1.9.3",
    "cnchar": "^3.2.6",
    "cnchar-poly": "^3.2.6",
    "cnchar-trad": "^3.2.6",
    "html-react-parser": "^5.1.10",
    "pinyin-pro": "^3.19.6",
    "plasmo": "0.85.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "*://*/*"
    ],
    "permissions": [
      "scripting",
      "storage"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "pinyin-annotator@fixicelo.ext"
      }
    }
  }
}
